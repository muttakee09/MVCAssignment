@model MVCAssignment.Models.Student

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "Student", FormMethod.Post, new
            {
                enctype = "multipart/form-data"
            }))
{
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
    <h4>Student</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.StudentId)

            <div class="row">
                <div class="col-md-8">
                    @{
                        Html.RenderPartial("_StudentForm");
                    }
                </div>

                @if (Model.Image != null)
                {
                    <div class="col-md-4" 
                         style="height:100%; display:flex; flex-direction:column; justify-content:center; align-items:center">
                        <h3>Current Image:</h3>
                        <img src=@Url.Content("~/Photos/" + @Model.Image) alt="@Model.Image" width="200" height="200" class="img-responsive"
                             style="box-shadow: 20px 12px 10px #ebf8f9"/>
                    </div>
                }

            </div>
    
    

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-success" />
            </div>
        </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
