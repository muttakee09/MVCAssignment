@model MVCAssignment.Models.Student

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<h4>Student details</h4>
<hr />
<div class="row">
    <div class="col-md-8" style="border-right:1px solid #e2f2f8">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.StudentName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.StudentName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Age)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.BloodGroup)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.BloodGroup)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Gender)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MainCourse)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.MainCourse.CourseName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SupplementaryCourse)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SupplementaryCourse.CourseName)
            </dd>
        </dl>
        </div>
        <div class="col-md-4" style="height:100%; display:flex; flex-direction:column; justify-content:center; align-items:center">
            <div>
                <h3>User Image</h3>
                @if (Model.Image != null)
                {
                    <img src=@Url.Content("~/Photos/" + @Model.Image) alt="@Model.Image" height="150" width="150" class="img-responsive" />
                }
                else
                {
                    <span>N/A</span>
                }
            </div>

        </div>
    </div>

